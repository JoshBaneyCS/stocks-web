---
import '../styles/global.css';

interface Props {
  title?: string;
}

const { title = 'Stocks Terminal' } = Astro.props;
---

<!doctype html>
<html lang="en" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="theme-color" content="#0a0e17" />
    <meta name="color-scheme" content="dark" />
    <meta name="description" content="Bloomberg-style stock terminal" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=JetBrains+Mono:wght@300;400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <title>{title}</title>
  </head>
  <body class="bg-terminal-bg text-terminal-text font-mono min-h-screen antialiased">
    <slot />
  </body>
</html>
