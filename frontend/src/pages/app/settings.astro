---
import Layout from '@/layouts/Layout.astro';
import Navbar from '@/components/Navbar';
import ProfileCard from '@/components/ProfileCard';
import FavoritesManager from '@/components/FavoritesManager';
---

<Layout title="Settings" requireAuth>
  <Navbar client:load />
  <div class="max-w-screen-xl mx-auto px-4 py-6 space-y-6">
    <div>
      <h1 class="text-lg font-semibold text-terminal-text">Settings</h1>
      <p class="text-xs text-terminal-muted mt-0.5">
        Manage your profile and favorite stocks
      </p>
    </div>

    <ProfileCard client:load />
    <FavoritesManager client:load />
  </div>
</Layout>